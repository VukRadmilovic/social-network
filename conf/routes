GET     /users/friends                              controllers.FriendController.getFriends()
GET     /users/requests/received                    controllers.FriendController.getReceivedRequests()
GET     /users/requests/sent                        controllers.FriendController.getSentRequests()
GET     /users                                      controllers.UserController.getAll
GET     /users/:username                            controllers.UserController.getByUsername(username:String)
DELETE  /users/requests/cancel/:id                  controllers.FriendController.cancelRequest(id:Long)
PUT     /users/requests/reject/:id                  controllers.FriendController.rejectRequest(id:Long)
PUT     /users/displayName/:newDisplayName          controllers.UserController.changeDisplayName(newDisplayName:String)
PUT     /users/password                             controllers.UserController.changePassword()
PUT     /users/email                                controllers.UserController.changeEmail()
POST    /users/requests/accept/:id                  controllers.FriendController.acceptRequest(id:Long)
POST    /users/register                             controllers.UserController.register()
POST    /users/login                                controllers.UserController.login()
POST    /users/requests/:username                   controllers.FriendController.sendRequest(username:String)